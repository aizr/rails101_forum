<ul>
  <% @boards.each do |board| %>
    <li>
      <%= board.name %>
      <%= link_to "Show", board_path(board) %>
      <% if current_user && current_user.is_admin? %>
        <%= link_to "Admin Edit", edit_admin_board_path(board) %>
        <%= link_to "Admin Delete", admin_board_path(board), :data => { :confirm => "Are you sure?" }, :method => :delete %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate(@boards) %>
<br />

<% if current_user && current_user.is_admin? %>
  <%= link_to "Admin New Board", new_admin_board_path %>
<% end %>
